<MDIconButtonTooltip@MDIconButton+MDTooltip>
<ReadingListScreenView>
    MDBoxLayout:
        orientation: "vertical"
        MyToolBar:
        BoxLayout:
            id:main_stack
            orientation: 'vertical'
            padding: dp(10), dp(10)
            spacing: dp(10)
            disabled:False
            GridLayout:
                #orientation: 'horizontal'
                cols:9
                rows:1
                spacing: dp(10)
                size_hint_y:None
                height:dp(50)
                MDBoxLayout:
                    md_bg_color: 1,1,1,1
                    CustomMDFillRoundFlatIconButton:
                        id:prev_button
                        text: "Prev Page"
                        icon: "arrow-left"
                        width: dp(50)
                        padding: dp(10), dp(10)
                        center_x:main_stack.x + (self.width)
                        on_release:root.get_page(self)
                    MDTextButton:
                        id:page_count
                        width: dp(1)
                        text: ''
                        center_x:main_stack.center_x
                        disabled:False
                        #on_release:MDDropdownMenu(items=root.menu_items,hor_growth='right',starting_coords ='bottom', width_mult=.5,background_color=(1,1,1,1)).open(self)
                    CustomMDFillRoundFlatIconButton:
                        id:next_button
                        text: 'Next Page'
                        icon: "arrow-right"
                        width: dp(50)
                        padding: dp(10), dp(10)
                        center_x:main_stack.right - (self.width)
                        on_release:root.get_page(self)
                    MDTextButton:
                        id:comics_per
                        width: dp(1)
                        text: ''
                        disabled:False
                    MDIconButton:
                        id:next_button
                        text: 'Next Page'
                        icon: "language-python"
                        width: dp(50)
                        padding: dp(10), dp(10)
                        center_x:main_stack.right - (self.width)
                        on_release:root.get_page(self)
                MDIconButtonTooltip:
                    tooltip_text: "Items Per Page"
                    icon: "table-plus"
                    id: item_per_menu_button
                    pos_hint: {"center_x": 1, "center_y": .5}
                    on_release: root.item_per_menu.open()

                MDIconButtonTooltip:
                    tooltip_text: "Filter"
                    icon: "filter-variant"
                    id: filter_menu_button
                    pos_hint: {"center_x": 1, "center_y": .5}
                    on_release: root.filter_menu.open()



            GridLayout:
                #orientation: 'horizontal'
                cols:3
                rows:1
                padding: dp(60), dp(60)
                spacing: dp(10)
                ScrollView:
                    do_scroll_x: False
                    id: main_scroll
                    padding: dp(10), dp(10), dp(10), dp(10)
                    #refresh_callback: self.refresh_callback
                    GridLayout:
                        id: main_grid
                        row_force_default: True
                        size_hint_y: None
                        size_hint_x: 1
                        height: self.minimum_height
                        padding: dp(10), dp(10),dp(10),dp(10)
                        spacing: dp(4)
                        col_default_width:root.comic_thumb_width
                        row_default_height:root.comic_thumb_height + dp(80)
<ListItemWithCheckbox>:
    LeftCheckbox:
        on_active: root.on_checkbox_active(*args)

<ReadingListImage>
    size: (dp(160),dp(240))
    font_style: 'Subtitle1'
    on_release:
        if self.do_action is 'read': self.open_readinglist()
        else: self.amenu_open()


<Tooltip>:
    size_hint: None, None
    size: self.texture_size[0]+5, self.texture_size[1]+5
    canvas.before:
        Color:
            rgb: 0.2, 0.2, 0.2
        Rectangle:
            size: self.size
            pos: self.pos
