<ComicListsBaseScreenView>
    MDBoxLayout:

        orientation: "vertical"
        MyToolBar:
        BoxLayout:
            id:main_stack
            orientation: 'vertical'
            padding: dp(10), dp(10)
            spacing: dp(10)
            disabled:False
            MDGridLayout:
                id:letter_grid
                rows : 1
                size_hint:(1, .1)
                pos_hint:{"left":1,"top":1}
            GridLayout:
                #orientation: 'horizontal'
                id:t_grid1
                cols:2
                rows:1
                size_hint_x:1
                size_hint_y:None
                height:dp(50)
                #page_num_grid used to add pagination top buttons

                MDGridLayout:
                    id:page_num_grid
                    rows : 1
                    size_hint:(.5, .5)
                    pos_hint:{"left":1,"top":1}
                MDGridLayout:
                    rows:1
                    cols:3
                    adaptive_size:True
                    MyMDRaisedButton:
                        width : dp(50) + (self.ids.lbl_txt.texture_size[0] - self.ids.lbl_txt.texture_size[0])
                        opacity : 0
                    MDIconButtonTooltip:
                        tooltip_text: "Items Per Page"
                        icon: "table-plus"
                        id: item_per_menu_button
                        on_release: root.item_per_menu.open()
                    MDIconButtonTooltip:
                        tooltip_text: "Filter"
                        icon: "filter-variant"
                        id: filter_menu_button
                        on_release: root.filter_popup.open()
                        disabled: 0 if root.show_filter else 1
                        opacity: 1 if root.show_filter else 0
            MDBoxLayout:
                adaptive_height:True
                orientation: 'vertical'
#                canvas.after:
#                    Color:
#                        rgba: 0,0,0,1
#                    Line:
#                        width: 2
#                        rectangle: 0, self.y, self.width, 0
                spacing:4
                MDLabel:
                    text: root.page_title
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: "blue"
                    adaptive_height: True
                    font_style: "H2"

                MDLabel:
                    text: root.page_year + "\n"
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: "blue"
                    adaptive_height: True
                    font_style: "Body2"
                    spacing:4

            ScrollView:
                #do_scroll_x: False
                id: main_scroll
                padding: dp(10), dp(10), dp(10), dp(10)
                refresh_callback: self.refresh_callback
                always_overscroll:False
                GridLayout:
                    id: main_grid
                    orientation:"lr-tb"
                    size_hint_y: None
                    size_hint_x: 1
                    height: self.minimum_height
                    padding: dp(10), dp(10),dp(10),dp(10)
                    spacing: dp(10)
                    #col_default_width:root.width
                    row_default_height:app.comic_thumb_height
<MDIconButtonTooltip@MDIconButton+MDTooltip>
