<ComicListsBaseScreenView>
    MDBoxLayout:
        orientation: "vertical"
        MyToolBar:
        BoxLayout:
            id:main_stack
            orientation: 'vertical'
            padding: dp(10), dp(10)
            spacing: dp(10)
            disabled:False
            GridLayout:
                #orientation: 'horizontal'
                cols:2
                rows:1
                size_hint_x:1
                size_hint_y:None
                height:dp(50)
                #page_num_grid used to add pagination top buttons
                MDGridLayout:
                    id:page_num_grid
                    rows : 1
                    size_hint:(.5, .5)
                    pos_hint:{"left":1,"top":1}
                MDBoxLayout:
                    adaptive_size:True
                    MyMDRaisedButton:
                        width : dp(50) + (self.ids.lbl_txt.texture_size[0] - self.ids.lbl_txt.texture_size[0])
                        opacity : 0
                    MDIconButtonTooltip:
                        tooltip_text: "Items Per Page"
                        icon: "table-plus"
                        id: item_per_menu_button
                        on_release: root.item_per_menu.open()
                    MDIconButtonTooltip:
                        tooltip_text: "Filter"
                        icon: "filter-variant"
                        id: filter_menu_button
                        on_release: root.filter_menu.open()

            ScrollView:
                #do_scroll_x: False
                id: main_scroll
                padding: dp(10), dp(10), dp(10), dp(10)
                refresh_callback: self.refresh_callback
                always_overscroll:False
                GridLayout:
                    id: main_grid
                    orientation:"lr-tb"
                    size_hint_y: None
                    size_hint_x: 1
                    height: self.minimum_height
                    padding: dp(10), dp(10),dp(10),dp(10)
                    spacing: dp(10)
                    #col_default_width:root.width
                    row_default_height:app.comic_thumb_height
