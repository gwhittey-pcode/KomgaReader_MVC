<LoginScreenView>
    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "MDTopAppBar"

        MDFloatLayout:

            MDBoxLayout:
                orientation: "vertical"
                adaptive_height: True
                size_hint_x: None
                width: root.width - dp(72)
                radius: 12
                padding: "12dp"
                md_bg_color: 1, 1, 1, .5
                pos_hint: {"center_x": .5, "center_y": .5}

                MDLabel:
                    id: prev_label
                    text: "Login to Komga Server:"
                    font_style: "H6"
                    adaptive_height: True
                    halign: "center"

                MDBoxLayout:
                    orientation: "vertical"
                    adaptive_height: True
                    padding: "50dp"
                    spacing: "20dp"

                    MDTextField:
                        id: username_field
                        hint_text: "Username"
                        #on_text: root.controller.set_user_data("login", self.text)
                        text:app.password

                    MDTextField:
                        id: pwd_field
                        hint_text: "Password"
                        #on_text: root.controller.set_user_data("password", self.text)
                        text:app.username

                    MDTextField:
                        id: url_field
                        hint_text: "Komga Server URL"
                       # on_text: root.controller.set_user_data("url", self.text)
                        text:app.base_url
                        
    MDFillRoundFlatButton:
        text: "LOGIN"
        on_release: root.controller.on_tap_button_login()
        pos_hint: {"center_x": .5, "center_y": .1}