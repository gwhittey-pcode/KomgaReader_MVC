<SeriesScreenView>
    MDBoxLayout:
        orientation: "vertical"
        MyToolBar:
        BoxLayout:
            id:main_stack
            orientation: 'vertical'
            padding: dp(10), dp(10)
            spacing: dp(10)
            disabled:False
            GridLayout:
                #orientation: 'horizontal'
                cols:9
                rows:1
                spacing: dp(10)
                size_hint_y:None
                height:dp(50)
                #page_num_grid used to add pagination top buttons
                MDGridLayout:
                    id:page_num_grid
                    rows : 1
                    size_hint:(None, None)
                    spacing:5
                    padding:(5, 5, 5, 5)
                MDGridLayout:
                    id:item_sel_grid
                    cols: 3
                    rows : 1
                    size_hint:(None, None)
                    spacing:5
                    padding:(5, 5, 5, 5)
                    MyMDRaisedButton:
                        width : dp(400) + (self.ids.lbl_txt.texture_size[0] - self.ids.lbl_txt.texture_size[0])
                        opacity : 0
                    MDIconButtonTooltip:
                        tooltip_text: "Items Per Page"
                        icon: "table-plus"
                        id: item_per_menu_button
                        pos_hint: {"center_x": 1, "center_y": .5}
                        on_release: root.item_per_menu.open()
#
#                    MDIconButtonTooltip:
#                        tooltip_text: "Filter"
#                        icon: "filter-variant"
#                        id: filter_menu_button
#                        pos_hint: {"center_x": 1, "center_y": .5}
#                        on_release: root.filter_menu.open()


#            GridLayout:
#                #orientation: 'horizontal'
#                cols:3
#                rows:1
#                padding: dp(10), dp(60)
#                spacing: dp(10)
            ScrollView:
                do_scroll_x: False
                id: main_scroll
                padding: dp(10), dp(10), dp(10), dp(10)
                refresh_callback: self.refresh_callback
                GridLayout:
                    id: main_grid
                    size_hint_y: None
                    size_hint_x: 1
                    height: self.minimum_height
                    padding: dp(10), dp(10),dp(10),dp(10)
                    spacing: dp(10)
                    col_default_width:root.comic_thumb_width
                    row_default_height:root.comic_thumb_height