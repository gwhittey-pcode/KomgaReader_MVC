<LoginPopupContent>
    id: main_win
    orientation: "vertical"
    spacing: dp(10)
    space_x: self.size[0]/3
    canvas.before:
        Color:
            rgba: (1,1,1, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        size_hint_y: None
        height: dp(50)
        canvas.before:
            Color:
                rgba: app.theme_cls.primary_color
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            text: "Login to Komga Server"
            bold: True
            size_hint_x: .9
        FlatButton:#TODO:Change to MDFlatIconButton
            text: "x"
            size_hint_x: .1
            on_release: app.ids.base.close_popup()
    BoxLayout:
        orientation: 'vertical'
        padding: main_win.space_x, dp(60)
        #spacing: 20
        BoxLayout:
            orientation: "vertical"
            spacing: dp(10)
            size_hint_y: None
            size_hint_x: None
            height: dp(150)
            width: dp(300)
            border:dp(10)
            Label:
                id: info
                text:
                markup: True
                size_hint_y: None
                height: dp(20)
            MDTextField:
                id: username_field
                hint_text: "Username"
                multiline: False
                mode:'rectangle'
                focus: True
                text:app.username
                on_text_validate: pwd_field.focus = True

            MDTextField:
                id: pwd_field
                hint_text: "Password"
                multiline: False
                mode:'rectangle'
                password: True
                on_text_validate: url_field.focus = True
                text:app.password

            MDTextField:
                id: url_field
                hint_text: "ComicRack Server URL"
                multiline: False
                mode:'rectangle'
                on_text_validate:root.validate_user()
                text:app.base_url

        Label:
            id: sp
            size_hint_y: None
            height: dp(40)
        Button:
            text: "Sign In"
            size_hint_y: None
            height: dp(40)
            background_color: app.theme_cls.primary_color
            background_normal: ''
            on_release: app.manager_screens.current_screen.validate_user()
        Label:
            id: sp2