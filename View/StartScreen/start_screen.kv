<StartScreenView>
    name: 'base'
    password: app.password
    username: app.username
    base_url: app.base_url
    api_key: app.api_key
    MDBoxLayout:
        orientation: "vertical"
        MyToolBar:
        ScrollView:
            size_hint_x: None
            width: box.width
            pos_hint: {'center_x': .5}
            bar_width: 0

            BoxLayout:
                id: box
                padding: dp(10)
                size_hint: None, None
                size: self.minimum_size
                spacing: dp(10)
                orientation: 'vertical'
                pos_hint: {'center_x': .5}
                BoxLayout:
                    size_hint: None, None
                    width: self.minimum_width
                    height: dp(56)
                    spacing: '10dp'
                    MDFillRoundFlatIconButton:
                        icon: 'format-list-group-plus'
                        text: 'Open ReadingLists'
                        height: dp(50)
                        opposite_colors: True
                        elevation_normal: 8
                        on_press:app.open_object_list_screen("Reading List")
                    MDFillRoundFlatIconButton:
                        icon: 'bookshelf'
                        text: 'Open Series'
                        height: dp(50)
                        opposite_colors: True
                        elevation_normal: 8
                        on_press:app.open_object_list_screen("Series List")
                    MDFillRoundFlatIconButton:
                        icon: 'server'
                        text: 'Open Collections'
                        height: dp(50)
                        opposite_colors: True
                        elevation_normal: 8
                        on_press:app.open_object_list_screen("Collection List")
                BoxLayout:
                    size_hint: None, None
                    width: self.minimum_width
                    height: dp(56)
                    spacing: '10dp'
                    MDFillRoundFlatIconButton:
                        icon: 'cog-outline'
                        text: 'Open Settings'
                        height:dp(50)
                        opposite_colors: True
                        elevation_normal: 8
                        md_bg_color: app.theme_cls.primary_color
                        on_press: app.open_settings()

                    MDFillRoundFlatIconButton:
                        icon: 'login'
                        text: 'Open Login'
                        height:dp(50)
                        opposite_colors: True
                        elevation_normal: 8
                        md_bg_color: app.theme_cls.primary_color
                        #on_press:app.show_action_bar()
                        on_press: root.open_popup()
                    MDIconButtonTooltip:
                        tooltip_text: "Filter"
                        icon: "filter-variant"
                        id: filter_menu_button
                        on_release: app.filter_nav_drawer.set_state("open")


                    # MDFillRoundFlatIconButton:
                    #     icon: 'folder-sync'
                    #     text: 'Open Sync Lists'
                    #     height:dp(50)
                    #     opposite_colors: True
                    #     elevation_normal: 8
                    #     on_press: app.switch_local_lists_screen()
                # BoxLayout:
                #     size_hint: None, None
                #     width: self.minimum_width
                #     height: dp(56)
                #     spacing: '10dp'

#                    MDFillRoundFlatIconButton:
#                        icon: 'file-image'
#                        text: 'Get Server Data'
#                        height:dp(50)
#                        opposite_colors: True
#                        elevation_normal: 8
#                        on_press: app.get_server_data()
                MDLabel:
                    id: last_comic_label
                    text: 'Last Comic Loaded\n Coming Soon'
                    size_hint_y: None
                    height: self.texture_size[1]
                    font_style: 'Caption'
                    theme_text_color: 'Primary'
                    markup: True
                    halign: 'center'
                    text_size: self.width - 20, None
                GridLayout:
                    id: main_grid
                    row_force_default: True
                    size_hint_y: None
                    size_hint_x: None
                    height: self.minimum_height
                    padding: dp(10), dp(10)
                    spacing: dp(4)
                    col_default_width:app.comic_thumb_width
                    row_default_height:app.comic_thumb_height




<FlatButton@ButtonBehavior+Label>:
    font_size: 16

<LoginPopupContent>
    id: main_win
    orientation: "vertical"
    spacing: dp(10)
    space_x: self.size[0]/3
    canvas.before:
        Color:
            rgba: (1,1,1, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        size_hint_y: None
        height: dp(50)
        canvas.before:
            Color:
                rgba: app.theme_cls.primary_color
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            text: "Login to Komga Server"
            bold: True
            size_hint_x: .9
        FlatButton:#TODO:Change to MDFlatIconButton
            text: "x"
            size_hint_x: .1
            on_release: app.popup.dismiss()
    BoxLayout:
        orientation: 'vertical'
        padding: main_win.space_x, dp(60)
        #spacing: 20
        BoxLayout:
            orientation: "vertical"
            spacing: dp(10)
            size_hint_y: None
            size_hint_x: None
            height: dp(150)
            width: dp(300)
            border:dp(10)
            Label:
                id: info
                text:
                markup: True
                size_hint_y: None
                height: dp(20)
            MDTextField:
                id: username_field
                hint_text: "Username"
                multiline: False
                mode:'rectangle'
                focus: True
                text:app.username
                on_text_validate: pwd_field.focus = True

            MDTextField:
                id: pwd_field
                hint_text: "Password"
                multiline: False
                mode:'rectangle'
                password: True
                on_text_validate: url_field.focus = True
                text:app.password

            MDTextField:
                id: url_field
                hint_text: "ComicRack Server URL"
                multiline: False
                mode:'rectangle'
                on_text_validate:app.manager_screens.current_screen.validate_user()
                text:app.base_url

        Label:
            id: sp
            size_hint_y: None
            height: dp(40)
        Button:
            text: "Sign In"
            size_hint_y: None
            height: dp(40)
            background_color: app.theme_cls.primary_color
            background_normal: ''
            on_release: app.manager_screens.current_screen.validate_user()
        Label:
            id: sp2