<RLComicBooksScreenView>
    max_item_per_page: app.max_item_per_page
    sync_bool:self.so
    MDBoxLayout:
        orientation: "vertical"
        MyToolBar:
        BoxLayout:
            id:main_stack
            orientation: 'vertical'
            padding: dp(10), dp(10)
            spacing: dp(10)
            disabled:False
            GridLayout:
                #orientation: 'horizontal'
                cols:9
                rows:1
                spacing: dp(10)
                size_hint_y:None
                height:dp(50)
                MDGridLayout:
                    id:page_num_grid
                    rows : 1
                    size_hint:(None, None)
                    spacing:5
                    padding:(5, 5, 5, 5)
                MDGridLayout:
                    id:item_sel_grid
                    cols: 3
                    rows : 1
                    size_hint:(None, None)
                    spacing:5
                    padding:(5, 5, 5, 5)
                    MyMDRaisedButton:
                        width : dp(400) + (self.ids.lbl_txt.texture_size[0] - self.ids.lbl_txt.texture_size[0])
                        opacity : 0
                    MDIconButtonTooltip:
                        tooltip_text: "Items Per Page"
                        icon: "table-plus"
                        id: item_per_menu_button
                        pos_hint: {"center_x": 1, "center_y": .5}
                        on_release: root.item_per_menu.open()

#                    MDIconButtonTooltip:
#                        tooltip_text: "Filter"
#                        icon: "filter-variant"
#                        id: filter_menu_button
#                        pos_hint: {"center_x": 1, "center_y": .5}
#                        on_release: root.filter_menu.open()

            GridLayout:
                #orientation: 'horizontal'
                cols:3
                rows:1
                padding: dp(10), dp(60)
                spacing: dp(10)
                ScrollView:
                    do_scroll_x: False
                    id: main_scroll
                    padding: dp(10), dp(10)
                    refresh_callback: self.refresh_callback
                    GridLayout:
                        id: main_grid
                        size_hint_y: None
                        size_hint_x: 1
                        height: self.minimum_height
                        padding: dp(10), dp(10),dp(30),dp(50)
                        spacing: dp(10)
                        col_default_width:root.comic_thumb_width
                        row_default_height:root.comic_thumb_height + dp(80)


<ReadingListComicImage>
    size: (dp(200),dp(300))
    font_style: 'Subtitle1'
    id:menu_open
    on_release:
        if self.do_action is 'read': self.open_comic()
        else: self.amenu_open()

<SyncButtonIcon>
    # on_release:
    #     if self.do_action is 'read': self.do_sync_rf()
    #     else: MDDropdownMenu(items=root.sync_menu_items, width_mult=3).open(self)

<SyncOptionsPopup>
    this_sync_bool:self.sw_syn_this_active
    center: (root.center_x,root.center_y)
	BoxLayout:
        orientation: 'vertical'
        padding: dp(10), dp(10)
        spacing: dp(10)
        disabled:False
        GridLayout:
            #orientation: 'horizontal'
            cols:3
            rows:1
            padding: dp(10), dp(10)
            spacing: dp(10)
            BoxLayout:
                padding: dp(10)
                size_hint_x:.15
                MDLabel:
                    id:syn_on_off_label
                    font_style: 'Body1'
                    theme_text_color: 'Error'
                    text: ""
                    halign: 'left'
                    valign:'top'
                    size_hint_y: None
                    height: self.texture_size[1]
                    padding: dp(25), dp(10)
        GridLayout:
            #orientation: 'horizontal'
            cols:3
            rows:1
            padding: dp(10), dp(10)
            spacing: dp(10)
            BoxLayout:
                padding: dp(10)
                size_hint_x:.15
                MDSwitch:
                    id:sw_syn_this
                    size_hint: None, None
                    size: dp(36), dp(48)
                    padding: dp(10), dp(10)
                    active:root.sw_syn_this_active
                MDLabel:
                    font_style: 'Body2'
                    theme_text_color: 'Primary'
                    text: "Sync this ReadingList"
                    halign: 'left'
                    valign:'top'
                    size_hint_y: None
                    height: self.texture_size[1]
                    padding: dp(25), dp(10)
#            BoxLayout:
#                padding: dp(10)
#                size_hint_x:.15
#                MDCheckbox:
#                    id:cb_optimize_size
#                    size_hint: None, None
#                    size: dp(48), dp(48)
#                    active:root.cb_optimize_size_active
#                MDLabel:
#                    font_style: 'Body2'
#                    theme_text_color: 'Primary'
#                    text: "Optimize Size"
#                    halign: 'left'
#                    valign:'top'
#                    size_hint_y: None
#                    height: self.texture_size[1]

        GridLayout:
            #orientation: 'horizontal'
            cols:3
            rows:1
            padding: dp(10), dp(10)
            spacing: dp(10)
            BoxLayout:
                padding: dp(10)
                size_hint_x:.15
                MDCheckbox:
                    id:cb_limit
                    size_hint: None, None
                    size: dp(48), dp(48)
                    active:root.cb_limit_active
                MDLabel:
                    font_style: 'Body2'
                    theme_text_color: 'Primary'
                    text: "Limit to"
                    halign: 'left'
                    size_hint_y: None
                    height: self.texture_size[1]
            BoxLayout:
                padding: dp(10)
                size_hint_x:.4
                MDTextField:
                    id:limit_num
                    helper_text: "Must be a whole number"
                    helper_text_mode: "on_error"
                    text:root.limit_num_text
                    post_hint_x:root.center_x

        GridLayout:
            #orientation: 'horizontal'
            cols:3
            rows:1
            padding: dp(10), dp(10)
            spacing: dp(10)
            BoxLayout:
                padding: dp(10)
                size_hint_x:.15
                MDCheckbox:
                    id:cb_only_read
                    size_hint: None, None
                    size: dp(48), dp(48)
                    active:root.cb_only_read_active
                MDLabel:
                    font_style: 'Body2'
                    theme_text_color: 'Primary'
                    text: "Only UnRead"
                    halign: 'left'
                    valign:'top'
                    size_hint_y: None
                    height: self.texture_size[1]
            BoxLayout:
                padding: dp(10)
                size_hint_x:.15
                MDCheckbox:
                    id:cb_purge
                    size_hint: None, None
                    size: dp(48), dp(48)
                    active:root.cb_purge_active
                MDLabel:
                    font_style: 'Body2'
                    theme_text_color: 'Primary'
                    text: "Purge Read or Last Sync Group"
                    halign: 'left'
                    valign:'top'
                    size_hint_y: None
                    height: self.texture_size[1]
        BoxLayout:
            orientation: 'horizontal'
            padding: dp(10), dp(10)
            spacing: dp(10)
            AnchorLayout:
                anchor_x:'left'
                anchor_y:'bottom'
                MDFillRoundFlatButton:
                    id: ok_btn
                    text: "MDFillRoundFlatButton"
                    halign: 'center'
                    size_hint: None, None
                    color: app.theme_cls.primary_color
                    font_size: '18sp'
                    text: 'Save'
                    on_release:root.on_ok()
            AnchorLayout:
                anchor_x:'right'
                anchor_y:'bottom'
                MDFillRoundFlatButton:
                    text: "MDFillRoundFlatButton"
                    halign: 'center'
                    size_hint: None, None
                    color: app.theme_cls.primary_color
                    font_size: '18sp'
                    text: 'Cancel'
                    on_release:root.on_cancel()

<Tooltip>:
    size_hint: None, None
    size: self.texture_size[0]+5, self.texture_size[1]+5
    canvas.before:
        Color:
            rgb: 0.2, 0.2, 0.2
        Rectangle:
            size: self.size
            pos: self.pos
