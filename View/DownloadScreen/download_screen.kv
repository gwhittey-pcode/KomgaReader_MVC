<DownloadScreenView>
    MDBoxLayout:
        orientation: "vertical"
        MyToolBar:
            id: top_bar
        MDBoxLayout:
            adaptive_height:True
            orientation: 'horizontal'
            spacing:4
            padding:dp(10)
            MDRaisedButton:
                id: download_toggle_btn
                adaptive_width:True
                text: "Start Download"
                padding_y:dp(10)
                on_release: root.toggle_download()
            MDLabel:
                id: download_text
                text: ""
                halign: "center"
                theme_text_color: "Custom"
                text_color: "blue"
                adaptive_height: True
                font_style: "Body2"

        MDTabs:
            id: tabs
            Tab:
                icon:"server"
                title:"Download Que"
                AnchorLayout:
                    id: que_box



            Tab:
                icon:"server"
                title:"Series/RL"
                AnchorLayout:
                    id: dl_series_box
            Tab:
                icon:"server"
                title:"Downloaded Files"
                AnchorLayout:
                    id: dl_file_box